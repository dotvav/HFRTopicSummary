{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SAM: Debug Summary Generator",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5890
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/var/task"
                }
            ],
            "preLaunchTask": "sam-invoke"
        }
    ]
}
